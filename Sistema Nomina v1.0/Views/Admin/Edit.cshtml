@using BLL.ViewModels
@model EmployeeVM


@{
    ViewData["Title"] = "Editar Empleado";
}

<h1>Nuevo Empleado</h1>
<hr />
<form asp-action="Edit">
    <input type="hidden" asp-for="Id" />
    <div class="row">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="col-12 col-md-4">
            <div class="form-group">
                <label asp-for="Nombre" class="control-label"></label>
                <input asp-for="Nombre" class="form-control" />
                <span asp-validation-for="Nombre" class="text-danger"></span>
            </div>
        </div>
        <div class="col-12 col-md-4">
            <div class="form-group">
                <label asp-for="ApellidoPaterno" class="control-label"></label>
                <input asp-for="ApellidoPaterno" class="form-control" />
                <span asp-validation-for="ApellidoPaterno" class="text-danger"></span>
            </div>
        </div>
        <div class="col-12 col-md-4">
            <div class="form-group">
                <label asp-for="ApellidoMaterno" class="control-label"></label>
                <input asp-for="ApellidoMaterno" class="form-control" />
                <span asp-validation-for="ApellidoMaterno" class="text-danger"></span>
            </div>
        </div>
        <div class="col-12 col-md-4">
            <div class="form-group">
                <label asp-for="FechaIngreso" class="control-label"></label>
                @Html.TextBoxFor(x => x.FechaIngreso, "{0:yyyy-MM-dd}", new { @class = "form-control", @type = "date" })
                <span asp-validation-for="FechaIngreso" class="text-danger"></span>
            </div>
        </div>
        <div class="col-12 col-md-4">
            <div class="form-group">
                <label asp-for="FechaBaja" class="control-label"></label>
                @Html.TextBoxFor(x => x.FechaBaja, "{0:yyyy-MM-dd}", new { @class = "form-control", @type = "date" })
                <span asp-validation-for="FechaBaja" class="text-danger"></span>
            </div>
        </div>
        <div class="col-12 col-md-4">
            <div class="form-group">
                <label asp-for="Base" class="control-label"></label>
                <input asp-for="Base" type="number" min="0.00" max="10000.00" step="0.01" class="form-control" />
                <span asp-validation-for="Base" class="text-danger"></span>
            </div>
        </div>
        <div class="col-12 col-md-4">
            <div class="form-group">
                <label asp-for="DeduccionDesayuno" class="control-label"></label>
                <input asp-for="DeduccionDesayuno" type="number" min="0.00" max="10000.00" step="0.01" class="form-control" />
                <span asp-validation-for="DeduccionDesayuno" class="text-danger"></span>
            </div>
        </div>
        <div class="col-12 col-md-4">
            <div class="form-group">
                <label asp-for="DeduccionAhorro" class="control-label"></label>
                <input asp-for="DeduccionAhorro" type="number" min="0.00" max="10000.00" step="0.01" class="form-control" />
                <span asp-validation-for="DeduccionAhorro" class="text-danger"></span>
            </div>
        </div>
        <div class="col-12 col-md-4">
            <div class="form-group">
                <label asp-for="DeduccionGasolina" class="control-label"></label>
                <input asp-for="DeduccionGasolina" type="number" min="0.00" max="10000.00" step="0.01" class="form-control" />
                <span asp-validation-for="DeduccionGasolina" class="text-danger"></span>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-12 col-md-4">
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="Activo" checked /> @Html.DisplayNameFor(model => model.Activo)
                </label>
            </div>
        </div>
        <div class="col-12 col-md-4">
            @* Roles *@
            <div>Roles</div>
            <div class="form-group form-check">
                @foreach (RoleVM role in ViewBag.Roles)
                {
                    <label class="form-check-label">
                        <input class="form-check-input" type="checkbox" data-val="true" name="employeeRoleId" value="@role.Id" @(Model.employeeRoleId.Any(x=> x == role.Id)? "Checked": null) > @role.Name
                    </label>
                }
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-12 col-md-4">
            <div class="form-group">
                <label asp-for="Email" class="control-label"></label>
                <input asp-for="Email" class="form-control" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
        </div>
        <div class="col-12 col-md-4">
            <div class="form-group">
                <label asp-for="Password"></label>
                <input asp-for="Password" class="form-control" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
        </div>
        <div class="col-12 col-md-4">
            <div class="form-group">
                <label asp-for="ConfirmPassword"></label>
                <input asp-for="ConfirmPassword" class="form-control" />
                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
            </div>
        </div>
        <div class="col-12 offset-md-8 col-md-4">
            <div class="form-group">
                <input type="submit" value="Guardar Cambios" class="btn btn-primary" />
            </div>
        </div>
    </div>
</form>

<div>
    <a asp-action="Index">Regresar</a>
</div>

