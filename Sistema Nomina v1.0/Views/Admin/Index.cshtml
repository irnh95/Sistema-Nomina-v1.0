@model IEnumerable<BLL.ViewModels.EmployeeVM>

@{
    ViewData["Title"] = "Empleados";
}

<h1>Empleados</h1>

<p>
    <a asp-action="Create">Nuevo Empleado</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Nombre)
            </th>
            <td>
                @Html.DisplayNameFor(model => model.Activo)
            </td>
            <th>
                @Html.DisplayNameFor(model => model.FechaIngreso)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr class="@((!item.Activo ? "bg-danger" : ""))">
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Nombre)
                @Html.DisplayFor(modelItem => item.ApellidoPaterno)
                @Html.DisplayFor(modelItem => item.ApellidoMaterno)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Activo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FechaIngreso)
            </td>
            <td>
                <a href="@Url.Action("index", "Employee", new { id = item.Id })" data-toggle="tooltip" title="Detalles" data-placement="top"><i class="fas fa-info-circle"></i></a>  |
                <a href="@Url.Action("Edit", "Admin", new { id = item.Id})" data-toggle="tooltip" title="Editar" data-placement="top"><i class="fas fa-edit"></i></a>  |
                @if (item.Activo)
                {
                    <a href="@Url.Action("Delete", "Admin", new { id = item.Id })" data-toggle="tooltip" title="Bloquer" data-placement="top"><i class="fas fa-toggle-on"></i></a>
                }
                else
                {
                    <a href="@Url.Action("Delete", "Admin", new { id = item.Id })" data-toggle="tooltip" title="Desbloquear" data-placement="top"><i class="fas fa-toggle-off"></i></a>
                }
            </td>
        </tr>
}
    </tbody>
</table>
