@using BLL.ViewModels
@model EmployeePeyRollVM

@{
    ViewData["Title"] = $"Empleado {Model.EmployeeVM.NombreCompleto}";
}

<h1>@Model.EmployeeVM.NombreCompleto</h1>


<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.PayRollsVM.FirstOrDefault().Month)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PayRollsVM.FirstOrDefault().Deposito)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.PayRollsVM)
        {
            <tr onclick="location.href = '/Employee/Details/?id=@Model.EmployeeVM.Id&Year=@item.Year&Month=@item.Month'" class="clickable">
                <td>
                    @Html.DisplayFor(modelItem => item.MonthName) - @Html.DisplayFor(modelItem => item.Year)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Deposito)
                </td>
            </tr>
        }
    </tbody>
</table>